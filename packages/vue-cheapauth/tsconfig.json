{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "typeRoots": ["./node_modules/@types", "../../node_modules/@types"],
    "jsx": "preserve",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "downlevelIteration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", ".cache"]
}
